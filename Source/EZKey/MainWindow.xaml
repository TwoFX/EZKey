<Window x:Class="EZKey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EZKey Keyboard Visualization" Height="350" Width="525" FontWeight="Bold" Loaded="Window_Loaded_1" Background="#FFFFFFFF" MouseDown="Window_MouseDown_1" ResizeMode="NoResize">
    <Grid x:Name="grid" Background="#33000000" MouseEnter="grid_MouseEnter" MouseLeave="grid_MouseLeave">
        <Label x:Name="lblMini" Content="Minimize" HorizontalAlignment="Right" VerticalAlignment="Top" Height="17" FontWeight="Normal" Padding="0" Margin="0,3,44,0" MouseDown="Label_MouseDown_1" Visibility="Hidden"/>
        <Label x:Name="lblClose" Content="Close" HorizontalAlignment="Right" VerticalAlignment="Top" Height="17" FontWeight="Normal" Padding="0" MouseDown="lblClose_MouseDown" Visibility="Hidden" Margin="0,3,10,0"/>
    </Grid>
</Window>
